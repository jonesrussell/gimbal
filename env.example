# Gimbal Game Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=DEBUG

# Log file path (relative or absolute)
LOG_FILE=logs/gimbal.log

# Enable console output (true/false)
LOG_CONSOLE_OUT=true

# Enable file output (true/false)
LOG_FILE_OUT=true

# =============================================================================
# GAME CONFIGURATION
# =============================================================================

# Window dimensions
GAME_WINDOW_WIDTH=1280
GAME_WINDOW_HEIGHT=720

# Window title
GAME_TITLE=Gimbal - ECS Version

# Target frames per second (1-120)
GAME_TPS=60

# Window resizable (true/false)
GAME_RESIZABLE=true

# Default scene to start with
GAME_DEFAULT_SCENE=menu

# =============================================================================
# DEBUG CONFIGURATION
# =============================================================================

# Enable debug mode (true/false)
DEBUG_ENABLED=true

# Pprof server port (for development)
DEBUG_PPROF_PORT=6060

# Show FPS counter (true/false)
DEBUG_SHOW_FPS=false

# Show memory usage (true/false)
DEBUG_SHOW_MEMORY=false

# =============================================================================
# APPLICATION METADATA
# =============================================================================

# Application version
APP_VERSION=dev

# =============================================================================
# DEVELOPMENT TIPS
# =============================================================================

# For development with hot reloading:
# LOG_LEVEL=DEBUG
# DEBUG_ENABLED=true
# DEBUG_SHOW_FPS=true

# For production:
# LOG_LEVEL=INFO
# DEBUG_ENABLED=false
# LOG_FILE=/var/log/gimbal.log

# For testing:
# LOG_LEVEL=WARN
# LOG_CONSOLE_OUT=false
# LOG_FILE_OUT=true 